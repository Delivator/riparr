# Streamrip Configuration Template
# Copy this file to config/streamrip.toml and fill in your credentials.
# Note: Riparr manages download folders and path patterns through its own settings.

[qobuz]
# 1: 320kbps MP3, 2: 16/44.1, 3: 24/<=96, 4: 24/>=96
quality = 3
email_or_userid = ""
# You can enter your plaintext password here; Riparr will hash it for you.
password_or_token = ""
# If using auth token, set this to true
use_auth_token = false

[deezer]
# 0: MP3 128, 1: MP3 320, 2: FLAC
quality = 2
# Get ARL from browser cookies
arl = ""

[tidal]
# 0: 256kbps AAC, 1: 320kbps AAC, 2: 16/44.1 "HiFi" FLAC, 3: 24/44.1 "MQA" FLAC
quality = 3
# Tokens are handled automatically after the first login via CLI if needed, 
# or can be pasted here if you have them.
user_id = ""
access_token = ""
refresh_token = ""
token_expiry = ""

[database]
# Path to the downloads database (used to skip already downloaded tracks)
downloads_enabled = true
downloads_path = "config/downloads.db"
failed_downloads_enabled = true
failed_downloads_path = "config/failed_downloads.db"

[misc]
# Streamrip version compatibility
version = "2.0.6"
