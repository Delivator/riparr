# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false

# Database
DATABASE_URL=sqlite:///riparr.db

# Jellyfin Configuration
JELLYFIN_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=your-jellyfin-api-key

# Streaming Services
PRIMARY_STREAMING_SERVICE=qobuz
FALLBACK_STREAMING_SERVICE=deezer

# Download Settings
DOWNLOAD_QUALITY=3
TEMP_DOWNLOAD_PATH=/tmp/riparr/downloads
MUSIC_OUTPUT_PATH=/media/Music
MUSIC_PATH_PATTERN={artist}/{artist} - {title}

# MusicBrainz
MUSICBRAINZ_USER_AGENT=Riparr/1.0.0

# Picard Post-Processing
PICARD_ENABLED=true

# Docker Compose Paths (for docker-compose.yml)
MUSIC_PATH=./music
CONFIG_PATH=./config
