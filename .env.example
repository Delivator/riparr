# Flask Configuration
SECRET_KEY=generate-a-safe-secret-key-here
FLASK_DEBUG=false

# Database
# Use a relative path for sqlite to make it portable
DATABASE_URL=sqlite:///instance/riparr.db

# Jellyfin Configuration (Optional)
JELLYFIN_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=

# Streaming Services Defaults
PRIMARY_STREAMING_SERVICE=qobuz
FALLBACK_STREAMING_SERVICE=deezer

# Download Settings
# Quality levels: Qobuz (1-4), Deezer (0-2), Tidal (0-3)
DOWNLOAD_QUALITY=3
# Use /tmp for transient files, or a relative path
TEMP_DOWNLOAD_PATH=./downloads/temp
# Final destination for your music
MUSIC_OUTPUT_PATH=./music
# {artist}, {title}, {album}
MUSIC_PATH_PATTERN={artist}/{artist} - {title}

# MusicBrainz
MUSICBRAINZ_USER_AGENT=Riparr/1.0.0

# Post-Processing
PICARD_ENABLED=true

# Docker Specific (Optional)
# If using docker, these paths define the volume mounts
DOCKER_MUSIC_PATH=./music
DOCKER_CONFIG_PATH=./config
